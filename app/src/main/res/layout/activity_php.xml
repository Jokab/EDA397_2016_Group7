<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eda397_group7.chalmers.se.eda397_2016_group7.PHPActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Session"
        android:id="@+id/newSession"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/phpText"
        android:layout_alignRight="@+id/resetButton"
        android:layout_alignEnd="@+id/resetButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:layout_alignTop="@+id/selectCard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Card"
        android:id="@+id/selectCard"
        android:layout_below="@+id/newSession"
        android:layout_toLeftOf="@+id/resetButton"
        android:layout_toStartOf="@+id/resetButton"
        android:layout_marginTop="112dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Waiting for result"
        android:id="@+id/phpText"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/selectCard"
        android:layout_alignStart="@+id/selectCard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Card"
        android:id="@+id/setCard"
        android:layout_below="@+id/newSession"
        android:layout_alignLeft="@+id/newSession"
        android:layout_alignStart="@+id/newSession" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Card"
        android:id="@+id/getCard"
        android:layout_below="@+id/newSession"
        android:layout_toLeftOf="@+id/selectCard"
        android:layout_toStartOf="@+id/selectCard" />
</RelativeLayout>
